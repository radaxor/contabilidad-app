[32m+[m[32m// --- ConversiÃ³n y totales (calculos.js) ---[m
[32m+[m[32mexport function calcularBalanceGeneral({ divisaUsd=0, binanceUsd=0, balanceBs=0, tasaVenta=0 }) {[m
[32m+[m[32m  const t = Number(tasaVenta) || 0;[m
[32m+[m[32m  const bsToUsd = t > 0 ? (Number(balanceBs)||0) / t : 0;[m
[32m+[m[32m  const totalUsd = (Number(divisaUsd)||0) + (Number(binanceUsd)||0) + bsToUsd;[m
[32m+[m[32m  return { bsToUsd, totalUsd };[m
[32m+[m[32m}[m
