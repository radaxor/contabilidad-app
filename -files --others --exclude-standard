[32m+[m[32mexport function fmtMoney(num, currency='USD', locale='es-VE') {[m
[32m+[m[32m  const n = Number(num) || 0;[m
[32m+[m[32m  return new Intl.NumberFormat(locale, { style: 'currency', currency }).format(n);[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mexport function fmtNumber(num, locale='es-VE') {[m
[32m+[m[32m  const n = Number(num) || 0;[m
[32m+[m[32m  return new Intl.NumberFormat(locale).format(n);[m
[32m+[m[32m}[m
